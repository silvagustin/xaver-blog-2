<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url(<%= asset_path 'home-bg.jpg' %>)">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>Xaver Blog 2</h1>
                    <hr class="small">
                    <span class="subheading">Un blog hecho para aprender Rails 5.</span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <% @posts.each do |post| %>
                <div class="post-preview">
                    <%= link_to post do %>
                        <h2 class="post-title">
                          <%= post.titulo %>
                      </h2>
                      <h3 class="post-subtitle">
                          <%= post.descripcion.truncate(150) %>
                      </h3>
                    <% end %>
                    
                    <p class="post-meta">Posteado por <%= link_to "#{post.usuario.email}", posts_usuario_path(post.usuario) %> el <%= fecha_de_publicacion(post) %></span>
                </div>
                <hr>
            <% end %>

            <!-- Pager -->
            <ul class="pager">
                <li class="next">
                    <a href="#">Older Posts &rarr;</a>
                </li>
            </ul>
        </div>
    </div>
</div>

<hr>
